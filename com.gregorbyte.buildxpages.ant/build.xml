<?xml version="1.0" encoding="UTF-8"?>
<project name="MyTask" basedir="." default="jar">

	<typedef file="antlib.xml" onerror="ignore">
	</typedef>

	<property name="src.dir" value="src" />
	<property name="bin.dir" value="bin" />

	<target name="clean" description="Delete all generated files">
		<delete file="${ant.project.name}.jar" />
	</target>

	<target name="jar" description="JARs the Task" depends="clean">
		<jar destfile="${ant.project.name}.jar" basedir="${bin.dir}" />
	</target>

	<target name="deletensf" description="Deletes an NSF" depends="jar">
	
		<deletensf filename="demo\\DidItwork.nsf"/>
	
	</target>
	
	<target name="copynsf" description="Copies an NSF" depends="jar">

		<copynsf srcfilepath="demo\\GitTest.nsf" dstfilepath="demo\\DidItwork.nsf" />

	</target>

	<target name="scxd" description="Testing scxd" depends="jar">

		<scxd server="domino02" database="Gregorbyte\\DoraDeploy.nsf" scxdflag="false" scxdpath="scxd\\NewThing.nsf" />

	</target>

	<target name="use" description="Use the task" depends="jar">

		<refreshdbdesign server="domino02" database="JobFiles\\Z1001.nsf" templateserver="domino02" />

	</target>
	
	<target name="testbuildnsf" description="Build an NSF" depends="jar">
	
		<buildnsf></buildnsf>
		
	</target>


</project>