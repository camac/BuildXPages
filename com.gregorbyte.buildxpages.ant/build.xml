<?xml version="1.0" encoding="UTF-8"?>
<project name="BuildXPagesAntLib" basedir="." default="jar">

	<typedef file="antlib.xml" onerror="ignore">
	</typedef>

	<property name="src.dir" value="src" />
	<property name="bin.dir" value="bin" />
	<property name="res.dir" value="res" />
	<property name="lib.dir" value="lib" />

	<target name="clean" description="Delete all generated files">
		<delete file="${lib.dir}/${ant.project.name}.jar" />
	</target>

	<target name="jar" description="JARs the Task" depends="clean">
		<jar destfile="${lib.dir}/${ant.project.name}.jar">

			<fileset dir="${bin.dir}">
			</fileset>
			<fileset dir="${res.dir}" />

		</jar>
	</target>

	<target name="installtouserhome" description="Install XPagesCI to user ant dir">
	
		<delete file="${user.home}/.ant/lib/${ant.project.name}.jar"></delete>
		
		<copy file="${lib.dir}/${ant.project.name}.jar" todir="${user.home}/.ant/lib"></copy>
		<copy file="${lib.dir}/jna-4.1.0.jar" todir="${user.home}/.ant/lib" overwrite="false" ></copy>
		
		
	</target>
	
	<target name="installtoant" description="Install BuildXPages to ant">

		<echo message="${user.home}" />
		
		<delete file="${ant.library.dir}/${ant.project.name}.jar"></delete>
		<copy file="${lib.dir}/${ant.project.name}.jar" todir="${ant.library.dir}"></copy>

	</target>
	
	<target name="install" depends="installtoant,installtouserhome">
	
	</target>

</project>